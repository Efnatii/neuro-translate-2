{
  "manifest_version": 3,
  "name": "Neuro Translate",
  "description": "Edge extension for translation workflow control and model benchmarking.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "bg/background.js"
  },
  "action": {
    "default_popup": "ui/popup.html"
  }
}
